@model Products



<div class="product-details-container">
    <div class="product-image">
        <img src="/CategoryImages/@Model.ImageFileName" alt="Product Image" width="100" height="70" style="border-radius: 50%; object-fit: cover;">
    </div>

    <div class="product-info">
        <h1>@Model.Name</h1>
        <p><strong>Price:</strong> @Model.Price</p>
        <p><strong>Description:</strong> @Model.Description</p>
        <p><strong>Category:</strong> @Model.SubCategory.Name</p>
       @*  <p><strong>Stock Availability:</strong> @Model.OutOfStock</p> *@
    </div>
</div>
